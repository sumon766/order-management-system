{
    "info": {
        "name": "Order Management API",
        "description": "E-Commerce Order Management System API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"customer\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/register",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "register"]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/login",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "login"]
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/user",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "user"]
                        }
                    }
                },
                {
                    "name": "Logout User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/logout",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "logout"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/products",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "products"]
                        }
                    }
                },
                {
                    "name": "Create Product (Vendor/Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"iPhone 15 Pro\",\n  \"description\": \"Latest Apple smartphone\",\n  \"sku\": \"IPHONE-15-PRO-256\",\n  \"price\": 1199.99,\n  \"stock_quantity\": 100,\n  \"low_stock_threshold\": 10,\n  \"is_active\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/products",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "products"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "access_token",
            "value": "your_access_token_here"
        }
    ]
}
